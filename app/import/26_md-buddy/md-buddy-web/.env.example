# Google Gemini API設定
VITE_GEMINI_API_KEY=your-gemini-api-key-here
VITE_GEMINI_API_URL=https://generativelanguage.googleapis.com
VITE_GEMINI_MODEL=gemini-pro
VITE_GEMINI_VOICE_MODEL=gemini-pro-vision

# Gemini詳細設定（オプション）
VITE_GEMINI_MAX_TOKENS=2048
VITE_GEMINI_TEMPERATURE=0.7
VITE_GEMINI_TOP_P=0.95
VITE_GEMINI_TOP_K=40

# レート制限設定
VITE_GEMINI_RATE_LIMIT_REQUESTS=60
VITE_GEMINI_RATE_LIMIT_WINDOW=60000

# セキュリティ設定
VITE_GEMINI_ENABLE_PROXY=true
VITE_GEMINI_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Supabase設定（オプション：リアルタイム同期用）
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# アプリケーション設定
VITE_APP_NAME=MD Buddy
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_APP_URL=http://localhost:5173

# 音声録音設定
VITE_AUDIO_SAMPLE_RATE=16000
VITE_AUDIO_MAX_DURATION=600000
VITE_AUDIO_SILENCE_THRESHOLD=3000

# 開発環境設定
VITE_DEBUG_MODE=false
VITE_SHOW_DEMO_LINK=true